{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
    {# <link href="../assets/styles/navbar.css" type="text/css" rel="stylesheet" /> #}
    {# <link href="{{asset('styles/navbar.css')}}" type="text/css" rel="stylesheet" />
    <link href="{{asset('styles/messages.css')}}" type="text/css" rel="stylesheet" /> #}
{% endblock %}

{% block title %}Hello OutboxController!{% endblock %}

{% block body %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-info">
            <div class="container-fluid">
                <a class="navbar-brand" href="/home"><h2>MailApp</h2></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-5 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" href="/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/outbox">Outbox</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/message">Send Message</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
                <div class="d-flex">
                    <img id="pfp" src="{{ asset('uploads/'~app.user.pfp) }}" alt="pfp" width="60" style="border-radius: 100%; margin-right: 20px;"/>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <h1>Outbox :: {{app.user.username}}</h1>
        <div class="outbox">
            {% for message in messages %}
                <a id="msg" href="">
                    <div class="message">
                    
                    {% for user in users %}
                        {% if message.receiverID == user.id %}
                            <img class="pfp msg-item" src="{{ 'uploads/'~user.pfp }}" alt="pfp" width="60" />
                        {% endif %}
                        {% if user.id == message.receiverID %}
                            <div class="receiver msg-item"><b>To:</b> {{ user.email }}</div>
                        {% endif %}
                    {% endfor %}
                        <div class="content">
                            <div class="messageHeader msg-item"><b>Subject:</b> {{ message.header }}</div>
                            <div class="messageBody msg-item"><b>Content:</b> {{ message.body }}</div>
                            <div class="timestamp msg-item"><b>Sent at:</b> {{ message.timestamp | date("Y-m-d H:i:s") }}</div>
                        </div>
                        <br/>
                    </div>
                </a>
            {% endfor %}
        <div>
    </main>
{% endblock %}
