{% extends 'base.html.twig' %}

{% block stylesheets %}
    {# <link href="../assets/styles/navbar.css" type="text/css" rel="stylesheet" /> #}
    <link href="{{asset('styles/navbar.css')}}" type="text/css" rel="stylesheet" />
    <link href="{{asset('styles/messages.css')}}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block title %}Hello OutboxController!{% endblock %}

{% block body %}
    <header>
        <h1>MailApp</h1>
        <nav>
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a href="/logout">Logout</a></li>
                <li><img id="pfp" src="{{ asset('uploads/'~app.user.pfp) }}" alt="pfp" /></li>
            </ul>
        </nav>
    </header>

    <main>
        <h1>Outbox :: {{app.user.username}}</h1>
        <div class="outbox">
            {% for message in messages %}
                <a id="msg" href="">
                    <div class="message">
                    
                    {% for user in users %}
                        {% if message.receiverID == user.id %}
                            <img class="pfp msg-item" src="{{ 'uploads/'~user.pfp }}" alt="pfp" />
                        {% endif %}
                        {% if user.id == message.receiverID %}
                            <div class="receiver msg-item"><b>To:</b> {{ user.email }}</div>
                        {% endif %}
                    {% endfor %}
                        <div class="content">
                            <div class="messageHeader msg-item"><b>Subject:</b> {{ message.header }}</div>
                            <div class="messageBody msg-item"><b>Content:</b> {{ message.body }}</div>
                            <div class="timestamp msg-item"><b>Sent at:</b> {{ message.timestamp | date("Y-m-d H:i:s") }}</div>
                            {# {{ message.timestamp|date("Y-m-d H:i:s") }} #}
                        </div>
                        <br/>
                    </div>
                </a>
            {% endfor %}
        <div>
    </main>
{% endblock %}
