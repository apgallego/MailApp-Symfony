{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <main>  
        <h1 class="mx-auto text-center mt-5">MailApp</h1>
        <form action="{{ path('login') }}" class="mx-auto w-25 mt-3 d-grid gap-3" method="post">
            <div class="form-group">
                <label for="username">Email:</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="_password"/>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary">Login</button>
            <br/>
            <a href="{{ path('app_forgot_password_request') }}" class="btn btn-warning">Reset your password!</a>
            <a href="{{ path('app_register') }}" class="btn btn-success">Or register if you don't have an account!</a>
        </form>
    </main>

